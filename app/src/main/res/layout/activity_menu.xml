<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Dating Profiles"
        android:textColor="#FF0505"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/changepicture"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:lines="2"
        android:text="Click on the profile to view more details and rate them."
        android:textColor="#73604E"
        android:textSize="18sp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></GridLayout>

    <ImageView
        android:id="@+id/profile1"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="172dp"
        android:maxWidth="42dp"
        android:maxHeight="42dp"
        android:src="@drawable/profile" />


    <ImageView
        android:id="@+id/profile2"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="172dp"
        android:maxWidth="42dp"
        android:maxHeight="42dp"
        android:src="@drawable/profile" />

    <ImageView
        android:id="@+id/profile3"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="352dp"
        android:maxWidth="42dp"
        android:maxHeight="42dp"
        android:src="@drawable/profile" />

    <ImageView
        android:id="@+id/profile4"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="352dp"
        android:maxWidth="42dp"
        android:maxHeight="42dp"
        android:src="@drawable/profile" />


</RelativeLayout>